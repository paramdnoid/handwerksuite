{
  "name": "zunftgewerk",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:landing": "turbo run dev --filter=@zunftgewerk/landing",
    "dev:web": "turbo run dev --filter=@zunftgewerk/web",
    "dev:desktop": "turbo run dev --filter=@zunftgewerk/desktop",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "db:generate": "turbo run db:generate --filter=@zunftgewerk/db",
    "db:migrate": "turbo run db:migrate --filter=@zunftgewerk/db",
    "db:seed": "turbo run db:seed --filter=@zunftgewerk/db",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck",
    "dep:check": "depcruise --config .dependency-cruiser.cjs packages/ apps/",
    "analyze": "ANALYZE=true turbo run build --filter=@zunftgewerk/landing --filter=@zunftgewerk/web",
    "storybook": "turbo run storybook --filter=@zunftgewerk/ui",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@next/bundle-analyzer": "^16.1.6",
    "dependency-cruiser": "^17.3.8",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "turbo": "^2.7.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "pnpm": {
    "overrides": {
      "lucide-react": "^0.574.0"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
